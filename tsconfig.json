{
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "commonjs",                                
    "strict": true,                                      
    "esModuleInterop": true,                             
    "skipLibCheck": true,                                
    "forceConsistentCasingInFileNames": true,            
    "outDir": "./dist",                                  
    "rootDir": "./src",                                  
    "noImplicitAny": true,                               
    "moduleResolution": "node",                          
    "resolveJsonModule": true,                           
    "types": ["node", "express"],                        
    "sourceMap": true                                    
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
